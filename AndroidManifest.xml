<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leonhuang.onespace"
    android:versionCode="0"
    android:versionName="0.0.3" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.leonhuang.onespace.TweetListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.leonhuang.onespace.TweetDetailActivity"
            android:label="@string/title_activity_tweet_detail"
            android:parentActivityName="com.leonhuang.onespace.TweetListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leonhuang.onespace.TweetListActivity" />
        </activity>
        <activity
            android:name="com.leonhuang.onespace.PostActivity"
            android:label="@string/title_activity_post"
            android:parentActivityName="com.leonhuang.onespace.TweetListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leonhuang.onespace.TweetListActivity" />
        </activity>
    </application>

</manifest>
